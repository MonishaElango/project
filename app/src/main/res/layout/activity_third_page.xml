<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#20BF55"
    android:orientation="vertical">



        <TextView
            android:id="@+id/textTV3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_15x"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Hevolve"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />





    <ImageView
        android:id="@+id/imageIV3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textTV3"
        android:layout_marginStart="@dimen/margin_15x"
        android:layout_marginEnd="24dp"
        android:src="@drawable/onboard_english" />

    <LinearLayout
        android:id="@+id/text_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/margin_65x"
        android:layout_marginStart="@dimen/margin_15x"
        android:layout_marginEnd="@dimen/margin_15x"
        app:layout_constraintTop_toBottomOf="@+id/imageIV3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_15x"
        android:fontFamily="sans-serif-light"
        android:includeFontPadding="false"
        android:letterSpacing="-0.01"
        android:text="Develop Skill"
        android:textColor="#000000"
        android:textSize="41sp" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="@dimen/margin_15x"
            android:text="In English"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_15x"
        android:layout_marginEnd="@dimen/margin_25x"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        android:fontFamily="@font/robot_regular"
        android:textColor="#000000"
        android:textSize="17sp"
        android:text="Okay, So we will be going slowly and slowly while you will be working on your English"
         />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>