<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_marginBottom="@dimen/margin_55x"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storiesRV"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_item"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <ImageView
        android:id="@+id/img_item"
        android:src="@drawable/santa_bg"
        android:layout_width="100dp"
        android:layout_marginTop="@dimen/height_20x"
        app:layout_constraintTop_toBottomOf="@+id/storiesRV"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/app_name"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/robot_regular"
        android:padding="10dp"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="50px"
        app:layout_constraintRight_toRightOf="@+id/img_item"
        app:layout_constraintEnd_toEndOf="@+id/img_item"
        app:layout_constraintStart_toEndOf="@+id/img_item"
        app:layout_constraintTop_toBottomOf="@+id/storiesRV" />

</androidx.constraintlayout.widget.ConstraintLayout>